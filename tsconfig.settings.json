{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "strict": true,
    "pretty": true,
    "jsx": "preserve",
    "jsxFactory": "h",
    "importHelpers": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "sourceMap": false,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "types": [ "webpack-env", "node", "jest"],
    "lib": [
      "esnext",
      "dom",
      "dom.iterable",
      "scripthost"
    ]
  }
}
